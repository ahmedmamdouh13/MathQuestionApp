<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:background="@color/black"
    >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <com.ahmedmamdouh13.ama.mathquestionapp.custom.CustomProgressView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/customprogress"
            android:alpha="0.8"
            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equation_textview"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/timer_textview"
            android:layout_alignParentStart="true"
            android:gravity="start|center"
            android:textSize="20sp"
            android:text="@string/template_equation" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:background="@drawable/round_corner_white"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/timer_textview"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            />

    </RelativeLayout>


</FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="= 30"
        android:id="@+id/answer_textview"
        android:textStyle="bold|italic"
        android:gravity="center|start"
        android:textColor="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="20sp"
        android:visibility="gone"

        />
</LinearLayout>